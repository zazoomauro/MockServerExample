{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block content %}
    <div class="container">
        {% if user is null %}
            <h2>GitHub User "{{ name }}" not found.</h2>
        {% else %}
            <h2>Git User: {{ user.name }}</h2>

            <dl class="dl-horizontal">
                <dt>ID</dt>
                <dd>{{ user.id }}&nbsp;</dd>

                <dt>Type</dt>
                <dd>{{ user.type }}&nbsp;</dd>

                <dt>Login</dt>
                <dd>{{ user.login }}&nbsp;</dd>

                <dt>Name</dt>
                <dd>{{ user.name }}&nbsp;</dd>

                <dt>Email</dt>
                <dd>{{ user.email }}&nbsp;</dd>

                <dt>Bio</dt>
                <dd>{{ user.bio }}&nbsp;</dd>

                <dt>Location</dt>
                <dd>{{ user.location }}&nbsp;</dd>

                <dt>Company</dt>
                <dd>{{ user.company }}&nbsp;</dd>

                <dt>Hireable</dt>
                <dd>{{ user.hireable ? 'Yes' : 'No' }}&nbsp;</dd>
            </dl>
        {% endif %}
    </div>
{% endblock %}
